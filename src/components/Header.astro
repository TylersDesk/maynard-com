---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import Navigation from './Navigation.astro';
import Image from 'astro/components/Image.astro';
import tylerLogo from '../images/tyler-maynard-logo-white.svg';
let backgroundUrl = 'url(/images/maynard-logo-grey-horizontal.png)';
---

<div id="mobile-nav" class="mobile-nav z-10 ">
	<div class="radial-gradient z-0 relative p-8">
		<!-- Button to close the overlay navigation -->
		<div class="absolute top-8 right-8">
			<a href="javascript:void(0)" class="tglbtn">&times;</a>
		</div>

		<div class="grid grid-cols-1 gap-4 content-between h-full z-10">
			<div>
				<div class="pt-4 ">
					<p>Let's get started</p>
					<div class="divider">
					</div>
				</div>
				<div class="mobile-links h100">
					<ul>
						<li><a class="antialiased" href="#">My Story</a></li>
						<li><a class="antialiased" href="#">Modern Tools for Men</a></li>
						<li><a class="antialiased" href="#">Podcast(s)</a></li>
						<li><a class="antialiased" href="#">Blog / Thoughts</a></li>
						<li><a class="antialiased" href="#">Training</a></li>
						<li><a class="antialiased" href="#">Hire</a></li>
					</ul>
				</div>
			</div>
			<div class="center w-full">
				
				<div class="social-icons flex justify-center">
