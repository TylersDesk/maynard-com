<style>
    .hero {
        border-bottom: 1px solid rgb(var(--gray-line)); 
    }
    .hero h1 {
        color:#fff;
        font-size: 1.8em;
    }

    p {
        line-height: 1.5em;
    }

    a {
        border:1px solid #fff;
        padding:10px 20px;
        color:#fff;
    }

    .tyler-pod {
        box-shadow: -6px 10px 36px -11px rgb(75,75,75);
